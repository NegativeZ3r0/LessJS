body {
    font-family: sans-serif;
    padding: 2rem;
}
.box {
    border: 1px solid #ccc;
    padding: 1rem;
    border-radius: 8px;
}
button {
    cursor: pointer;
    padding: 8px 16px;
    background: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
}
button:hover {
    background: #0056b3;
}
